package javaclass;



import java.util.ArrayList;
import java.util.Scanner;



public class JavaClass {  
    
    public static Scanner ip = new Scanner(System.in);
   
    public static String exercute(String str) {
            String[] s = str.split("\\s+");
            String tmp = s[s.length - 1];
            for(int i = 0; i<s.length-1;++i) {
                tmp += s[i].charAt(0);
            }
            return tmp;
    }
    
    public static void main(String[] args) {
        int t = ip.nextInt();
        ip.nextLine();
        ArrayList<String> al = new ArrayList<String>();
        while(t-->0) {
            String str;
            str = ip.nextLine();
            str = str.trim();
            str = str.toLowerCase();
            String s = exercute(str);
            al.add(s);
            int cnt = 0;
            for(int i = 0; i<al.size();++i) {
                if(s.equals(al.get(i))) {
                    ++cnt;
                }
                
            }
           if(cnt>1) {
                System.out.println(s + Integer.toString(cnt) + "@ptit.edu.vn" );
            }
            else {
                System.out.println(s + "@ptit.edu.vn");
            }
        }
    }
}
